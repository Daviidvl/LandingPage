const carrosseis = document.querySelectorAll('.carrossel');

  carrosseis.forEach(carrossel => {
    let imagens = carrossel.querySelectorAll('img');
    let index = 0;

    const mostrarImagem = i => {
      imagens.forEach(img => img.classList.remove('imagemAtiva'));
      imagens[i].classList.add('imagemAtiva');
    }

    carrossel.querySelector('.proximo').onclick = () => {
      index = (index + 1) % imagens.length;
      mostrarImagem(index);
    }

    carrossel.querySelector('.anterior').onclick = () => {
      index = (index - 1 + imagens.length) % imagens.length;
      mostrarImagem(index);
    }

    mostrarImagem(index);
  });

    function toggleMenu() {
    document.getElementById("nav-links").classList.toggle("show");
  }